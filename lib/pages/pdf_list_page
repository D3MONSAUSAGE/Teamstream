import 'package:flutter/material.dart';
import 'package:teamstream/services/pocketbase/pdf_service.dart';
import 'package:teamstream/pages/pdf_viewer_page.dart';

class PDFListPage extends StatefulWidget {
  const PDFListPage({super.key});

  @override
  PDFListPageState createState() => PDFListPageState();
}

class PDFListPageState extends State<PDFListPage> {
  List<Map<String, dynamic>> pdfs = [];
  bool isLoading = true;

  @override
  void initState() {
    super.initState();
    loadPDFs();
  }

  void loadPDFs() async {
    List<Map<String, dynamic>> fetchedPDFs = await PDFService.fetchPDFs();
    setState(() {
      pdfs = fetchedPDFs;
      isLoading = false;
    });
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: const Text("Uploaded PDFs")),
      body: isLoading
          ? const Center(child: CircularProgressIndicator())
          : ListView.builder(
              padding: const EdgeInsets.all(10),
              itemCount: pdfs.length,
              itemBuilder: (context, index) {
                var pdf = pdfs[index];

                return Card(
                  elevation: 3,
                  margin: const EdgeInsets.symmetric(vertical: 8),
                  child: ListTile(
                    leading: const Icon(Icons.picture_as_pdf, color: Colors.red),
                    title: Text(pdf["name"]),
                    subtitle: Text("Uploaded on: ${pdf["date"]}"),
                    trailing: const Icon(Icons.open_in_new),
                    onTap: () {
                      Navigator.push(
                        context,
                        MaterialPageRoute(
                          builder: (context) =>
                              PDFViewerPage(pdfUrl: pdf["url"]),
                        ),
                      );
                    },
                  ),
                );
              },
            ),
    );
  }
}
